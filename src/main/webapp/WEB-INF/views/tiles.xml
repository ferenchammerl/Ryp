<tiles-definitions>  
  
   <!-- Base Definition -->
   <definition name="base-definition"
       template="/WEB-INF/views/tiles/layouts/defaultLayout.jsp">  
       <put-attribute name="title" value="" />  
       <put-attribute name="header" value="/WEB-INF/views/tiles/template/defaultHeader.jsp" />  
       <put-attribute name="menu" value="/WEB-INF/views/tiles/template/defaultMenu.jsp" />  
       <put-attribute name="body" value="" />  
       <put-attribute name="footer" value="/WEB-INF/views/tiles/template/defaultFooter.jsp" />  
   </definition>  
  
   <!-- Login Page -->
   <definition name="login" extends="base-definition">  
       <put-attribute name="title" value="Welcome to RYP" />  
       <put-attribute name="header" value="/WEB-INF/views/tiles/template/emptyHeader.jsp" />  
       <put-attribute name="body" value="/WEB-INF/views/pages/login.jsp" />  
       <put-attribute name="menu" value="/WEB-INF/views/tiles/template/emptyMenu.jsp" />  
   </definition>  
   
   <!-- Register Page -->
   <definition name="registration" extends="base-definition">  
       <put-attribute name="title" value="Register" />  
       <put-attribute name="body" value="/WEB-INF/views/pages/registration.jsp" />  
   </definition>  
   <definition name="registrationSuccess" extends="base-definition">  
       <put-attribute name="title" value="Registration completed" />  
       <put-attribute name="body" value="/WEB-INF/views/pages/registrationSuccess.jsp" />  
   </definition>  
 
   <!-- Product Page -->
   <definition name="userlist" extends="base-definition">  
       <put-attribute name="title" value="Users" />  
       <put-attribute name="body" value="/WEB-INF/views/pages/userlist.jsp" />  
   </definition>  
       
   <!-- Access Denied Page -->
   <definition name="accessDenied" extends="base-definition">  
       <put-attribute name="title" value="Access denied" />  
       <put-attribute name="body" value="/WEB-INF/views/pages/accessDenied.jsp" />  
   </definition>  
  
